<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.shop.dao.mapper.UserInfoMapper">
	<!-- 회원가입 -->
	<insert id="create" parameterType="UserInfo">
		insert into userinfo values(#{user_id},#{password},#{user_name},#{user_address},#{user_phone},#{email})
	</insert>
	<!-- 한명의 회원 찾기 -->
	<select id="findUserInfoById" parameterType="String" resultType="UserInfo">
		select * from userinfo where user_id= #{user_id}
	</select>
	<!-- 회원정보수정 -->
	<update id="updateUserInfoById" parameterType="UserInfo">
		update userinfo set password = #{password},
                            user_address= #{user_address},
                            user_phone= #{user_phone},
                            email= #{email}
		where user_id= #{user_id}
	</update>
	<!-- 회원탈퇴 -->
	<delete id="deleteUserInfoById" parameterType="String">
		delete userinfo where user_id = #{user_id}
	</delete>
	
	<!-- 회원존재여부 -->
	<select id="existedUser" parameterType="String" resultType="int">
		select count(*) cnt from userinfo where user_id=#{user_id}
	</select>
	
</mapper>